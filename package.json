{
  "private": true,
  "scripts": {
    "client": "yarn workspace @cohdex/client start",
    "server": "yarn workspace @cohdex/server dev",
    "shared": "yarn workspace @cohdex/shared watch",
    "tmap": "yarn workspace @cohdex/tactical-map watch",
    "test:watch": "yarn workspace @cohdex/server test:watch --silent",
    "prepare": "husky install"
  },
  "workspaces": [
    "client",
    "server",
    "shared",
    "tactical-map"
  ],
  "devDependencies": {
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "yarn eslint",
      "yarn prettier --write"
    ]
  }
}
