{
  "name": "kondah-app",
  "version": "1.0.0",
  "main": "bootstrap.ts",
  "author": "kondah",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --no-notify src/bootstrap.ts",
    "test": "jest --collect-coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "eslint": "^7.26.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": ">=11",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.6",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.4"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "yarn eslint",
      "yarn prettier --write",
      "yarn test --watchAll=false --findRelatedTests --bail"
    ]
  },
  "dependencies": {
    "@kondah/core": "latest",
    "@kondah/http-context": "latest",
    "@kondah/http-controller": "latest"
  }
}
